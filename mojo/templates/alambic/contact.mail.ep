% stash subject => 'Contact from Alambic!';
% my $name = stash( 'name' );
% my $email = stash( 'email' );
% my $message = stash( 'message' );
% my $today = localtime(time());

<h2>Message from Alambic</h2>

<p>User <code><%= $name %></code> (<code><%= $email %></code>) has left a message for Alambic team on <code><%= $today %></code>.</p>

<p><%= $message %></p>

